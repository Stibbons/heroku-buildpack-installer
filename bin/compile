#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Executing installation defined in .Buildfile"

BUILD_DIR=$1

cd $BUILD_DIR
ls -la

echo "-----> Build dir: $BUILD_DIR"
echo "-----> Buildfile content:"
cat .Buildfile
echo "-----> PATH=$PATH"
echo "-----> PYTHONPATH=$PYTHONPATH"
echo "-----> PYTHONHOME=$PYTHONHOME"
echo "-----> Executing..."
source .Buildfile
